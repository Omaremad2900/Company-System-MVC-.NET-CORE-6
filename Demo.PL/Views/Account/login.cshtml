@model LoginViewModel
@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>login</h1>
<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
<form asp-action="Login" >
	
	<input class="text" asp-for="Email" placeholder="Your Email" required="">
	<span asp-validation-for="Email" class="text-danger"></span>
	<input class="text" asp-for="Password" placeholder="Password" required="">
	<span asp-validation-for="Password" class="text-danger"></span>
	
	<div class="wthree-text">
		<label class="anim">
			<input asp-for="RememberMe" class="checkbox" required="">
			<span>I Agree To The Terms & Conditions</span>
		</label>
		<div class="clear"> </div>
	</div>
	<input type="submit" value="SIGNIN">
</form>
<p>Don't have an Account? <a asp-action="Register"> Sign Up Now!</a></p>
<p><a asp-action="ForgetPassword">Forget Password</a></p>
	</div>
</div>

@section ValidationScripts
{
	<partial name="_ValidationScriptsPartial" />
}

